extends templates/layout

block content
    h4 Change Title Of Video
    form(method="POST")
        input(name="title" type="text" placeholder="Title" value=video.title maxlength=80 required)
        input(name="description" type="text" placeholder="Description" value=video.description minlength=20 required)
        input(name="hashtags" type="text" placeholder="Hashtags, seperated by comma" value=video.hashtags.join() required)
        input(type="submit" value="Save")