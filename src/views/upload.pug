extends templates/layout

block content 
    div 
        video#preview
        button#startBtn Start Recording
    if errorMessage
        p=errorMessage
    form(method="POST" enctype="multipart/form-data")
        label(for="video") Video File
        input(name="video" id="video" type="file" accept="video/*" required)
        input(name="title" type="text" placeholder="Title" maxlength=80 required)
        input(name="description" type="text" placeholder="Description" minlength=20 required)
        input(name="hashtags" type="text" placeholder="Hashtags, seperated by comma" required)
        input(type="submit" value="Upload")

block scripts 
    script(src="/assets/js/recorder.js")